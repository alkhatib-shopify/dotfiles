alias ls='ls -lGh'
alias la='ls -lGha'
alias sed='sed -E'
alias tlf='tail -f'

alias be='bundle exec'
alias rc='rails console'
alias rs='rails server'
alias rdb='rails dbconsole'
alias pspec='rake parallel:spec'
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"

alias pgstart='launchctl load ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist'
alias pgstop='launchctl unload ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist'

if type hub > /dev/null 2>&1; then
  alias git='hub'
  alias gitsh='gitsh --git $(which hub)'
fi

alias g='git'
alias gs='git status -sb'
alias ga='git add'
alias gc='git commit'

alias tmux='tmux -2'

alias dotfiles='cd $DOTFILES'
alias mkdir="mkdir -p"
alias path='echo $PATH | tr -s ":" "\n"'

alias ag=rg

alias apm-save='apm list --installed --bare > $DOTFILES/atom/packages.list'
alias apm-up='apm install --packages-file $DOTFILES/atom/packages.list'
